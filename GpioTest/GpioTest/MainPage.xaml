        <CheckBox Content="Channel 3" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Tag="3" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        <CheckBox Content="Channel 4" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Tag="4" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>

    </Grid>
</Page>
